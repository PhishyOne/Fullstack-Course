<!-- Step 1: Include Header -->
<%- include('partials/header.ejs') %>

    <!-- Step 2: Display Band Name -->
    <% if (typeof adj !=='undefined' && typeof noun !=='undefined' ) { %>
        <h1>
            <%= adj %>
                <%= noun %>
        </h1>
        <% } else { %>
            <h1>Band Name Generator</h1>
            <% } %>

                <!-- Step 3: Form to generate a new band -->
                <form action="/submit" method="POST">
                    <input type="submit" value="Generate Name">
                </form>

                <!-- Step 4: Optional description / instructions -->
                <p>Click the button above to generate a random band name. Each submission creates a unique combination!
                </p>

                <!-- Step 5: Preview image (optional) -->
                <a href="/project25">
                    <img src="/project25/images/preview.png" alt="Preview of Band Generator Project" height="200">
                </a>

                <!-- Step 6: Link to GitHub code -->
                <p><a
                        href="https://github.com/PhishyOne/Fullstack-Course/tree/main/Completed-Projects/25-Band-Generator">My
                        Chapter 25 Code</a></p>

                <!-- Step 7: Include Footer -->
                <%- include('partials/footer.ejs') %>